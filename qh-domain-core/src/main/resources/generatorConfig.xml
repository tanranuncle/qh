<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- MyBatis3  -->
    <!-- MyBatis3Simple  -->
    <!-- MyBatis3DynamicSql  -->
    <!-- Ibatis2Java2  -->
    <!-- Ibatis2Java5  -->
    <context id="DB2Tables" targetRuntime="MyBatis3DynamicSql">
        
        <property name="javaFileEncoding" value="utf-8" />

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />

        <commentGenerator>
            <property name="suppressDate" value="true" />
            <property name="addRemarkComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/qh"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.chic.qh.domain.dal.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>


        <!-- With targetRuntime value MyBatis3DynamicSql,
        The mappers are generated as annotated mappers regardless of what is specified for the "type" of <javaClientGenerator>.-->
        <!-- ANNOTATEDMAPPER -->
        <!-- MIXEDMAPPER -->
        <!-- XMLMAPPER -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.chic.qh.domain.dal.mapper"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="qh_enquiry_order_info" domainObjectName="EnquiryOrderInfo" >
            <generatedKey column="enquiry_order_id" sqlStatement="JDBC" identity="true" />
        </table>

        <table tableName="qh_enquiry_order_goods" domainObjectName="EnquiryOrderGoods" >
            <generatedKey column="rec_id" sqlStatement="JDBC" identity="true" />
        </table>

        <table tableName="qh_goods" domainObjectName="Goods" >
            <generatedKey column="goods_id" sqlStatement="JDBC" identity="true" />
        </table>

        <table tableName="qh_sku_relation" domainObjectName="SkuRelation" >
            <generatedKey column="sku_id" sqlStatement="JDBC" identity="true" />
        </table>

    </context>
</generatorConfiguration>